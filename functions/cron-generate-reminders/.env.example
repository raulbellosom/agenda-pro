# ===========================================
# Appwrite Function: cron-generate-reminders
# ===========================================
# CRON Schedule: * * * * * (every minute) or */2 * * * * (every 2 min)
# Configure this in Appwrite Console > Functions > Settings > Schedule

# Appwrite Connection (Required)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_server_api_key

# Database (Required)
APPWRITE_DATABASE_ID=agenda_pro_db

# Collections (Required)
COLLECTION_EVENTS_ID=events
COLLECTION_EVENT_REMINDERS_ID=event_reminders
COLLECTION_EVENT_ATTENDEES_ID=event_attendees
COLLECTION_CALENDARS_ID=calendars
COLLECTION_NOTIFICATIONS_ID=notifications

# Processing (Optional)
BATCH_SIZE=100
LOOK_AHEAD_MINUTES=5
