# ===========================================
# Appwrite Function: invite-to-group
# ===========================================

# Appwrite Connection (Required)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_server_api_key

# Database (Required)
APPWRITE_DATABASE_ID=agenda_pro_db

# Collections (Required)
COLLECTION_GROUPS_ID=groups
COLLECTION_GROUP_MEMBERS_ID=group_members
COLLECTION_GROUP_INVITATIONS_ID=group_invitations
COLLECTION_USERS_PROFILE_ID=users_profile
COLLECTION_NOTIFICATIONS_ID=notifications
COLLECTION_AUDIT_LOGS_ID=audit_logs
COLLECTION_ROLES_ID=roles

# RBAC Collections (for permission validation)
COLLECTION_USER_ROLES_ID=user_roles
COLLECTION_ROLE_PERMISSIONS_ID=role_permissions
COLLECTION_PERMISSIONS_ID=permissions

# Defaults (Optional)
DEFAULT_INVITATION_EXPIRY_DAYS=7

# App URL (for invitation links)
APP_URL=http://localhost:5173

# SMTP Configuration (Optional - for sending invitation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM_NAME=Agenda Pro
SMTP_FROM_EMAIL=your_email@gmail.com
